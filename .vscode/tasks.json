{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++-9 build active file",
      "command": "/usr/lib/ccache/g++-9",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",        
        
        "-I${workspaceFolder}/pch/include",
        "-I$/mnt/hd/disk2/softwares/OpenCV/installation/OpenCV/include/opencv4",
        // "-I${workspaceFolder}/MyFlipCart/include",
        // "-I${workspaceFolder}/ParkingLot/include",
        // "-I${workspaceFolder}/Chess/include",
        // "-I${workspaceFolder}/Blackjack/include",
        // "-I${workspaceFolder}/CricketCommentary/include",

        "-o",
        "${fileDirname}/build/${fileBasenameNoExtension}",
        "`pkg-config",
        "--cflags",
        "--libs",
        "opencv4`"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}